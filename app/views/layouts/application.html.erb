<!DOCTYPE html>
<html>
  <head>
    <title>おいでよ！チンチラの森</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= include_gon %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= flash[:error] %>
    
    <main>
      <% if current_page?(root_path) %>
        <%= yield %>
        <%= render partial: 'owners/registrations/new' %>
        <%= render partial: 'owners/sessions/new' %>
      <% else %>
        <div class="container-fluid">
          <div class="row">
            <div class="left-bar col-lg-2">
              <%= render "layouts/leftbar" %>
            </div>
            <div class="center col-lg-8 mt-5">
              <%= yield %>
            </div>
            <div class="right-bar col-lg-2">
              <%= render 'layouts/rightbar' %>
            </div>
          </div>
        </div>
      <% end %>
    </main>

    <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap" async defer></script>
  </body>
</html>
