<header>
  <nav class="navbar navbar-expand-lg navbar-light  d-flex flex-column">
    <div class="header-top container">
      <a class="navbar-brand" href="/"><%= image_tag 'pf-images/logo.png', size: "250x100" %></a>
      <div class="header-menu">
        <ul class="navbar-nav ml-auto">
          <% if owner_signed_in? %>
            <li>
              <%= link_to owner_path(current_owner), class: 'nav-link' do %>
                <%= attachment_image_tag current_owner, :image, :fill, 50, 50, fallback: "pf-images/profile_noimage.png", size: "30x30" %>
                <%= current_owner.name %>さん
              <% end %>
            </li>
            <li><%= link_to '投稿', new_post_path, class: 'nav-link' %></li>
          <% else %>
            <li><%= link_to 'ログイン', new_owner_session_path, class: 'nav-link' %></li>
            <li><%= link_to '新規登録', new_owner_registration_path, class: 'nav-link' %></li>
          <% end %>
        </ul>
        <div class="header-search raw">
          <input type="search">
          <button>検索</button>
        </div>
      </div>
    </div>
    <div class="global-nav container d-flex justify-content-around">
      <ul class="navbar-nav">
        <%= link_to "Home", root_path, class: "nav-link" %>
        <%= link_to "投稿一覧", posts_path, class: "nav-link" %>
        <%= link_to "チンチラ一覧", chinchillas_path, class: "nav-link" %>
        <%= link_to "病院情報", hospitals_path, class: "nav-link" %>
        <%= link_to "相談", questions_path, class: "nav-link" %>
        <%= link_to "お問い合わせ", contact_path, class: "nav-link" %>
        
        <li class="nav-link">コミュニティ(後日実装予定)</li> 
        
      </ul>
    </div>
  </nav>
</header>