<div class="owner-header container">
  <div crass="row">
    <div class="col-lg-10">
      <table>
        <tbody>
          <tr>
            <td class="owner-image">
              <%= link_to owner_path(@owner) do %>
                <%= attachment_image_tag @owner, :image, :fill, 100, 100, fallback: "pf-images/profile_noimage.png", size: "100x100", class: "owner-image" %>
              <% end %>
            </td>
            <td class="owner-profile">
              <%= link_to "#{@owner.name}さんのマイページ", owner_path(@owner) %>
            </td>
          </tr>
        </tbody>
      </table>
      <%= link_to "主さんの情報を変更する", edit_owner_path(@owner) %>
      <%= link_to "退会する", withdrawal_path %>
      <%= @owner.favorite_chinchillas.count %>

    </div>
  </div>
</div>

<h2><%= @owner.name %>さんちのチンチラさん</h2>
<h3><%= link_to "新しい家族を追加", new_chinchilla_path %></h3>
<% @owner.chinchillas.each do |chinchilla| %>
  <%= link_to "#{chinchilla.name}", chinchilla_path(chinchilla) %>
  <%= attachment_image_tag chinchilla, :image, :fill, 150, 150, fallback: "pf-images/photo_noimage.png", size: "150x150" %>
<% end %>