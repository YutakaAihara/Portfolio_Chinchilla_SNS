<div class="ml-5">
  <div class="post-detail d-flex justify-content-center flex-column">
    <div class="post-image d-flex justify-content-center">
      <%= attachment_image_tag @post, :image, :fill, 500, 500 %>
    </div>
    <div class="post-info ml-5 mt-3">
      <h2 class="mt-3"><strong>「 <%= @post.post_title %> 」</strong></h2>
      <p class="post-intro mt-3 mb-3"><%= @post.post_body %></p>
      <div class="post-intro mt-4">
        <%= link_to chinchilla_path(@post.chinchilla) do %>
          <%= attachment_image_tag @post.chinchilla, :image, :fill, 50, 50, fallback: "pf-images/photo_noimage.png", size: "50x50", class: "post-chinchilla-image" %>
          <span><%= @post.chinchilla.name %>ちゃんの投稿</span>
        <% end %>
            <div class="d-flex justify-content-end mt-3">
              <span class="mr-3">
                <% if @post.favorited_by?(current_owner) %>
                  <%= link_to post_favorite_posts_path(@post), method: :delete do %>
                    ♥<%= @post.favorite_posts.count %> いいね
                  <% end %>
                  <% else %>
                    <%= link_to post_favorite_posts_path(@post), method: :post do %>
                      ♡<%= @post.favorite_posts.count %> いいね
                    <% end %>
                <% end %>                
              </span>
              
              <% if @post.chinchilla.owner == current_owner %>
                <%= link_to "投稿を編集する", edit_post_path(@post), class: "btn btn-success btn-sm mr-2" %>
                <%= link_to "投稿を削除する", post_path(@post), method: :delete, class: "btn btn-danger btn-sm" %>
              <% end %>
            </div>
      </div>
    </div>
  </div>
  <div class="comments ml-5 mt-5">
    <h3>コメント</h3>
    <% @post.post_comments.each do |post_comment| %>
      <div class="d-flex align-items-center mt-3">
        <div class="comment-owner-image">
          <%= attachment_image_tag post_comment.owner, :image, :fill, 50, 50, fallback: "pf-images/profile_noimage.png", size: "50x50", class: "comment-owner-image" %>
        </div>
        <div class="comment-owner-name d-flex align-items-center justify-content-center ml-2">
          <%= link_to "#{post_comment.owner.name}", owner_path(post_comment.owner.name) %>
        </div>
        <div class="comment-body d-flex align-items-center">
          <p class="d-flex align-items-center"><%= post_comment.comment %></p>
        </div>
        <div class="ml-2">
          <%= post_comment.created_at.strftime('%Y/%m/%d') %>
        </div>
        <% if post_comment.owner == current_owner %>
        <div class="comment-delete ml-3">
          <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-sm btn-outline-danger" %>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <div class="new-comment ml-5 mt-5">
    <h4>コメントする</h4>
  <%= form_with model:[@post, @post_comment], local: true do |f| %>
    <%= f.text_area :comment, rows:'5',placeholder: "コメントはこちらへ", class: "post-comment-area" %>
    <div class="d-flex justify-content-end">
      <%= f.submit "送信する", class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
  

</div>