<h1><%= @post.post_title %></h1>
<%= attachment_image_tag @post, :image, :fill, 200, 200 %>
<%= @post.post_body %>
<%= @post.chinchilla.name %>の投稿
<%= link_to "#{@post.chinchilla.name}ちゃんのページ", chinchilla_path(@post.chinchilla) %>

<div class="comments">
  <p>コメント数:<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <p><%= attachment_image_tag post_comment.owner, :image, :fill, 100, 100, fallback: "pf-images/profile_noimage.png", size: "100x100" %></p>
    <%= post_comment.owner.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <% if post_comment.owner == current_owner %>
    <div class="comment-delete">
      <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
    </div>
    <% end %>
  <% end %>
</div>

<div class="new-comment">
<%= form_with model:[@post, @post_comment], local: true do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>

<% if @post.chinchilla.owner == current_owner %>
  <%= link_to "投稿を編集する", edit_post_path(@post) %>
  <%= link_to "投稿を削除する", post_path(@post), method: :delete %>
<% end %>