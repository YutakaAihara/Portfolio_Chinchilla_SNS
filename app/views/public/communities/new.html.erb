<h1>コミュニティ作成</h1>
<%= render "layouts/errors", object: @community %>
<%= form_with model: @community, url: communities_path, local: true do |f| %>
  <div class="field mt-3">
  <%= f.label :name, 'コミュニティ名' %>
  <%= f.text_field :name %>
  </div>
  
  <div class="field mt-3">
  <%= f.label :image, 'コミュニティのイメージ画像' %>
  <%= f.attachment_field :image %>
  </div>
  
  <div class="field mt-3">
  <%= f.label :introduction, 'コミュニティの紹介' %><br>
  <%= f.text_area :introduction, class: "post-body" %>
  </div>
  
  <div class="actions mt-3">
    <%= f.submit "登録する", class: "btn btn-lg btn-primary" %>
  </div>

<% end %>