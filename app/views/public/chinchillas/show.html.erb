<h1><%= @chinchilla.name %>ちゃん</h1>
<%= attachment_image_tag @chinchilla, :image, :fill, 200, 200, fallback: "pf-images/photo_noimage.png", size: "200x200"%>
<% if @chinchilla.birthday %>
  <%= @chinchilla.birthday.strftime("%Y年 %m月") %>生まれ
  (<%= chinchilla_old(@chinchilla) %>さい)
<% end %>
<%= @chinchilla.sex %>
<%= @chinchilla.fur_type %>
<%= @chinchilla.introduction %>
<% if @chinchilla.favorited_by?(current_owner) %>
  <p>
    <%= link_to chinchilla_favorite_chinchillas_path(@chinchilla), method: :delete do %>
      ファン<%= @chinchilla.favorite_chinchillas.count %> 人
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to chinchilla_favorite_chinchillas_path(@chinchilla), method: :post do %>
      ファン<%= @chinchilla.favorite_chinchillas.count %> 人
    <% end %>
  </p>
<% end %>
<%= attachment_image_tag @chinchilla.owner, :image, :fill, 100, 100, fallback: "pf-images/profile_noimage.png", size: "100x100"%>
<%= @chinchilla.owner.name %>
<% if @chinchilla.owner = current_owner %>
  <%= link_to "#{@chinchilla.name}ちゃんの情報を編集する", edit_chinchilla_path(@chinchilla) %>
  <%= link_to "#{@chinchilla.name}ちゃんの情報を削除する", chinchilla_path(@chinchilla), method: :delete %>
<% end %>


