<h2>投稿一覧</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">画像</th>
      <th scope="col">タイトル</th>
      <th scope="col">文章</th>
      <th scope="col">投稿者</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td>
            <%= attachment_image_tag post, :image, :fill, 50,50 %>
          </td>
          <td><%= post.post_title %></td>
          <td><%= post.post_body %></td>
          <td><%= post.chinchilla.owner.name %></td>
          <td><%= link_to "削除", admin_post_path(post), method: :delete, class: "btn btn-sm btn-danger" %></td>
        </tr>
        
    <% end %>
    <%= paginate @posts %>
  </tbody>
</table>
