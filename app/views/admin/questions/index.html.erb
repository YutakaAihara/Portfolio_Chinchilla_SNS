<h2>相談一覧</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">投稿者</th>
      <th scope="col">投稿日</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
        <tr>
          <td><%= question.question_title %></td>
          <td><%= question.owner.name %></td>
          <td><%= question.created_at.strftime("%Y/%m %H:%M") %></td>
          <td><%= link_to "この相談のコメント", admin_question_path(question), class: "btn btn-sm btn-primary" %></td>
          <td><%= link_to "削除", admin_question_path(question), method: :delete, class: "btn btn-sm btn-danger" %></td>
        </tr>
        
    <% end %>
    <%= paginate @questions %>
  </tbody>
</table>
